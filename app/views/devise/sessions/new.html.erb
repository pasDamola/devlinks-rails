<div class="mb-6">
  <h2 class="text-2xl font-bold">Login</h2>
  <h2 class="text-xs mt-1 text-gray-500">Add your details below to get back into the app</h2>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: "false"}) do |f| %>
  <div class="mb-6">
    <%= f.label :email, class: label_class %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class %>
    </div>
  </div>

  <div class="mb-6">
    <%= f.label :password, class: label_class %>
    <div class="mt-1">
      <%= f.password_field :password, autocomplete: "current-password", class: input_class %>
    </div>
  </div>

   <%
=begin%>
 <div>
      <div class="flex items-center justify-between">
        <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
        <div class="text-sm">
          <a href="#" class="font-semibold text-indigo-600 hover:text-indigo-500">Forgot password?</a>
        </div>
      </div>
      <div class="mt-2">
        <input id="password" name="password" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
      </div>
    </div> 
<%
=end%>

  <%
=begin%>
 <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %> 
<%
=end%>

  <div>
    <%= f.submit "Log in", class: form_button_class %>
  </div>
<% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="mt-10 text-center text-sm text-gray-500">
          Don't have an account?
      <%= link_to "Create account", new_registration_path(resource_name),  class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
    </p>
  <% end %>
